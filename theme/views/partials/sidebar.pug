bs5-sidebar.bg-dark.text-light.d-flex.justify-content-center.align-items-center#main-sidebar(
    container-selector="#main",
    position="left",
    auto-hide="true",
    mode="overlap",
)
    .list-group.list-group-dark.w-100
        a.list-group-item.list-group-item-action(href="/", rv-route-class-active="'/'")= nav.home
        a.list-group-item.list-group-item-action(href="/contact", rv-route-class-active="'/contact'")= nav.contact
        if (nav.links && nav.links.length > 0)
            each link in nav.links
                a.list-group-item.list-group-item-action(href="/" + link.page.data.attributes.slug, rv-route-class-active=`'/${link.page.data.attributes.slug}'`)= link.label