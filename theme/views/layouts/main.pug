doctype html
html.theme-os(lang='de')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='stylesheet', type='text/css', href='/fonts.css', lazyload="1")
    link(rel='stylesheet', type='text/css', href='/main.css', lazyload="1")

    include ../partials/seo/head.pug
    include ../partials/favicons.pug

  body
    script.
      document.documentElement.classList.remove("theme-os");
      document.documentElement.classList.add(localStorage.getItem("bs5-theme") || "theme-os");
      window.env = {};
      window.env.STRAPI_REMOTE_URL = "#{env.STRAPI_REMOTE_URL}";
    include ../partials/header.pug
    router-view#main(listen-all-links="true")
      block content
    include ../partials/navbar.pug
    include ../partials/sidebar.pug
    script(async, src='/vendors.bundle.js')
    script(async, src='/main.bundle.js')
