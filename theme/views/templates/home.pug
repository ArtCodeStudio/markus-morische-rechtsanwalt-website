extends ../layouts/main.pug

block content
  home-page
    .container-fluid.container-lg.my-5
      .row
        .col-12.col-md.d-flex.align-items-center
          .mx-md-5
            if home.avatar && home.avatar.data.url
              img.img-fluid.rounded-md-circle(loading="lazy", src= home.avatar.data.url, alt=home.avatar.data.alternativeText, title=home.avatar.data.alternativeText, width=home.avatar.data.width, height=home.avatar.data.height)
        .col-12.col-md
          .row
            .col-12
              h1.display-2.mt-5.my-md-0
                .fw-bold= home.title
                .fw-light= home.subtitle
              .mt-5!= home.content
          .row.my-5.d-block.d-md-none
            .col-auto.text-center
              .btn-group-vertical
                a.btn.btn-outline-primary.my-2(href="mailto:" + contact.email) E-Mail schreiben
                a.btn.btn-outline-primary.my-2(href="tel:" + contact.phoneNumber) Anrufen
                a.btn.btn-outline-primary.my-2(href="/backend/api/contact") Kontakt herunterladen