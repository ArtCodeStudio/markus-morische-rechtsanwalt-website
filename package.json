{
    "name": "markus-morische",
    "version": "0.0.1",
    "description": "",
    "scripts": {
        "start": "yarn run start:strapi && yarn run start:backend",
        "start:strapi": "pm2 --cwd strapi start strapi/pm2.strapi.config.js",
        "start:backend": "dvm use 1.15.2 && pm2 --cwd backend start backend/pm2.backend.config.js",
        "build": "yarn run build:theme && yarn run build:strapi",
        "build:theme": "yarn workspace @markus-morische/theme run build",
        "build:strapi": "cd strapi && NODE_OPTIONS=\"\" npm run build && cd .."
    },
    "workspaces": [
        "packages/riba/packages/*",
        "packages/riba/backend/*",
        "packages/riba/infra/*",
        "!packages/riba/infra/cli",
        "!packages/riba/infra/doc",
        "!packages/riba/infra/schematics",
        "theme"
    ],
    "packageManager": "yarn@3.1.0",
    "devDependencies": {
        "@yarnpkg/sdks": "^2.5.1-rc.1",
        "pm2": "^5.1.2",
        "typescript": "^4.4.4"
    },
    "dependencies": {
        "@ribajs/eslint-config": "workspace:packages/riba/infra/eslint-config",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/experimental-utils": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "@yarnpkg/pnpify": "^3.1.1-rc.3",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0"
    }
}
